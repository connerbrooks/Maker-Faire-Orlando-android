<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="7" android:versionName="1.6" package="com.makerfaireorlando.app">

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/Theme.Ommf">
        <activity android:label="@string/app_name" android:name="com.makerfaireorlando.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="Settings" android:name="com.makerfaireorlando.app.Settings">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.makerfaireorlando.app.MainActivity"/>
        </activity>
        <activity android:label="@string/title_activity_email" android:name="com.makerfaireorlando.app.EmailActivity" android:windowSoftInputMode="adjustResize|stateVisible">
        </activity>
    </application>

</manifest>
